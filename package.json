{
  "name": "toy-robot",
  "version": "1.0.1",
  "description": "",
  "repository": {
    "url": "git+https://github.com/zoltan-nz/toy-robot-typescript",
    "type": "git"
  },
  "homepage": "",
  "keywords": [
    "toy-robot"
  ],
  "author": "Zoltan",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf lib .nyc-output coverage",
    "lint": "tslint --force --fix \"src/**/*.ts\" \"test/**/*.ts\"",
    "prebuild": "yarn lint",
    "build": "yarn run clean && echo Using TypeScript && tsc --version && tsc --pretty",
    "pretest": "yarn build",
    "test": "mocha",
    "test:only": "mocha",
    "test:coverage": "nyc yarn test && open coverage/index.html",
    "prepare": "yarn test",
    "watch": "yarn build -- --watch",
    "watch:test": "yarn test -- --watch",
    "watch:launch": "nodemon lib/main",
    "prestart": "yarn build",
    "start": "node ./lib/main"
  },
  "files": [
    "lib"
  ],
  "main": "lib/main.js",
  "bin": {
    "toy-robot": "./lib/main.js"
  },
  "dependencies": {
    "lodash": "latest"
  },
  "devDependencies": {
    "@types/chai": "latest",
    "@types/lodash": "latest",
    "@types/mocha": "latest",
    "@types/node": "latest",
    "@types/sinon": "latest",
    "@types/sinon-chai": "latest",
    "chai": "latest",
    "coveralls": "latest",
    "mocha": "latest",
    "nodemon": "latest",
    "nyc": "latest",
    "rimraf": "latest",
    "sinon": "latest",
    "sinon-chai": "latest",
    "stdio-mock": "latest",
    "ts-node": "latest",
    "tslint": "latest",
    "typescript": "latest"
  },
  "engines": {
    "node": ">=6.0.0"
  }
}
